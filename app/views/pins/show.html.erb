<div class="row">
  <div class="col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading center">
        <%= image_tag @pin.image.url(:medium) %>
      </div>
      <div class="panel-body">
        <p><%= @pin.description %></p>
        <p><strong><%= @pin.user.name %></strong></p>
        <% if current_user && (@pin.user == current_user) %>
          <%= link_to edit_pin_path(@pin), class: "btn btn-default btn-sm" do %>
            <span class="glyphicon glyphicon-edit" aria-hidden="true"></span> Edit
          <% end %>
          <%= link_to @pin, class: "btn btn-danger btn-sm", method: :delete, data: { confirm: 'Are you sure?' } do %>
            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Delete
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div>
  <nav>
    <ul class="pager">
      <li class="previous">
        <%= link_to @pin.previous do %><span aria-hidden="true">&larr;</span> Older<% end %>
      </li>
      <li class="next">
        <%= link_to @pin.next do %>Newer <span aria-hidden="true">&rarr;</span><% end %>
      </li>
    </ul>
  </nav>
</div>